<!DOCTYPE html>
<html>
  <head>
    <title>Pokemon On Rails <%= yield(:html_title)%></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <%= render partial: 'common/navbar' %>
    <%= form_with(url: search_pokemons_path, method: :get, local: true) do %>
      <div>
        <%= text_field_tag(:keywords, nil, class: "input", placeholder: "Search for a pokemon")%>
        <%= submit_tag("Search")%>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
