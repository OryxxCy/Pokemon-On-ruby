<% content_for(:html_title) {@pokemon.name}%>
<h1>
  <%= @pokemon.name%>
  <%= image_tag("sprites/#{@pokemon.id}.png") %>
</h1>
<p>
  <%= @pokemon.description%>
</p>
<h2>
  Stats
</h2>
<ul>
  <li>
    Type:
    <% @pokemon.types.each do |pokemon_type| %>
      <%= link_to pokemon_type.name, pokemon_type%>
    <% end %>
  </li>
  <li>
    HP: <%= @pokemon.hp%>
  </li>
  <li>
    Attack: <%= @pokemon.attack%>
  </li>
  <li>
    Defense: <%= @pokemon.defense%>
  </li>
  <li>
    Special Attack: <%= @pokemon.special_attack%>
  </li>
  <li>
    Special Defense: <%= @pokemon.special_defense%>
  </li>
  <li>
    Speed: <%= @pokemon.speed%>
  </li>
</ul>
<h2>
  Moves that <%= @pokemon.name%> can learn.
</h2>
<ul>
  <% @pokemon.moves.each do |pokemon_move| %>
    <li>
      <%= link_to pokemon_move.name, pokemon_move %>
    </li>
  <% end %>
</ul>