<div class="section">
    <h1 class="title has-text-centered">Generation 1 Pokedex</h1>
    <div class="columns">
      <div class="column">
        <h2 class="subtitle">
          Pokemon
        </h2>
      </div>
      <div class="column">
        <h2 class="subtitle">
          Type
        </h2>
      </div>
      <div class="column">
        <h2 class="subtitle">
          Number of moves
        </h2>
      </div>
    </div>
    <% @pokemons.each do |pokemon| %>
      <div class="columns">
        <div class="column">
          <div class="box">
            <%= image_tag("sprites/#{pokemon.id}.png" , alt: "#{pokemon.name} Sprite", class: 'image is-64x64')%>
            <%= link_to pokemon.name, pokemon, class: 'has-text-centered is-size-5'%>
          </div>
        </div>
        <div class="column">
          <div class="box">
            <% pokemon.types.each do |pokemon_type| %>
              <%= link_to image_tag("types/#{pokemon_type.name.downcase}.png", alt: "#{pokemon_type.name} Image"), pokemon_type %>
            <% end %>
          </div>
        </div>
        <div class="column">
          <div class="box">
            <%= pokemon.moves.count %>
          </div>
        </div>
      </div>
    <% end %>
</div>
